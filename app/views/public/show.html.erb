



<h2><%= @page.title %></h2>

<% if @page.title == "Life Groups"  %>
<table id="grid">
<thead>
	<th data-field="title"><strong>Group Name</strong></th>
	<th data-field="when"><strong>Date / Time</strong></th>
	<th data-field="location"><strong>Location</strong></th>
	<th data-field="content"><strong>Notes</strong></th>
</thead>
<tbody>
	<% @lifegroups.each do |lifegroup| %>
	<tr>	
		<td><%= lifegroup.title %></td>		
		<td><%= safe lifegroup.when %></td>
		<td><%= safe lifegroup.location %></td>
		<td><%= safe lifegroup.content %></td>
	</tr>	
	<% end %>
</table>
<% end %>
</tbody>

<p><%= safe @page.content %></p>